
@model TicketsModelView
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <h2 class="text-center mb-4">Create Ticket</h2>

                        <form method="post" asp-action="Create" asp-controller="Ticket">
                            <div asp-validation-summary="All" class="text-danger mb-2"></div>

                            <div class="form-group">
                                <label asp-for="TicketType">TicketType</label>
                                <input class="form-control" asp-for="TicketType">
                                <span asp-validation-for="TicketType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AvailableQuantity">AvailableQuantity</label>
                                <input class="form-control" asp-for="AvailableQuantity">
                                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                            </div> 
                            <div class="form-group">
                                <label for="EventID">Select Event</label>
                                <select asp-for="EventID" class="form-control">
                                    <option value="">-- Select Event --</option>
                                    @foreach (var venue in ViewBag.Venues)
                                    {
                                        <option value="@venue.Value">@venue.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="EventID" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary mt-2">Submit</button>
                        </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
